<Window x:Class="KnittingAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnittingAssistant"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5 5 5 5"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 5 0 5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="160" MaxWidth="750"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel  IsEnabled="{Binding partitionSettings, FallbackValue=True}" Grid.Column="0" Margin="5 10 5 0">
            <TextBlock>Ширина изображения, см</TextBlock>
            <TextBox PreviewTextInput="propertyTextBox_textInput" PreviewKeyDown="propertyTextBox_keyDown">50</TextBox>
            <TextBlock>Высота изображения, см</TextBlock>
            <TextBox PreviewTextInput="propertyTextBox_textInput" PreviewKeyDown="propertyTextBox_keyDown">30</TextBox>
            <CheckBox IsChecked="True" Content="Сохранить пропорции"/>
            <Button Content="Применить" Width="80" Margin="0 15 0 15" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBlock>Ширина фрагмента, см</TextBlock>
            <TextBox PreviewTextInput="propertyTextBox_textInput" PreviewKeyDown="propertyTextBox_keyDown">1</TextBox>
            <TextBlock>Высота фрагмента, см</TextBlock>
            <TextBox PreviewTextInput="propertyTextBox_textInput" PreviewKeyDown="propertyTextBox_keyDown">1</TextBox>
            <CheckBox IsChecked="True" Content="Квадратный фрагмент"/>
            <Button Content="Разбить" Width="80" Margin="0 15 0 0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        </StackPanel>
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3"
                      HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
        <Grid Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Margin ="15 15 15 0" DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft" Height="45">
                    <Button ToolTip="Показать сетку">
                        <Image Source="resources/grid_off_icon_1.png"></Image>
                    </Button>
                    <Button IsEnabled="False">
                        <Button.ToolTip>
                            <ToolTip Content="Сохранить изображение" ToolTipService.ShowOnDisabled="True"/>
                        </Button.ToolTip>
                        <Image Source="resources/save_image_icon_1.jpg"></Image>
                    </Button>
                    <Button ToolTip="Загрузить изображение" Click="click_LoadImageOnForm">
                        <Image Source="resources/load_image_icon_2.jpg"></Image>
                    </Button>
                    <Button ToolTip="Палитра цветов">
                        <Image Source="resources/palette_icon_1.png"></Image>
                    </Button>
                </StackPanel>
                <Image x:Name="mainImage" Grid.Row="1" Margin="15 0 15 15" Source="resources/default_image.png" Cursor="Hand"
                           PreviewMouseLeftButtonDown="click_LoadImageOnForm" Stretch="Uniform">
                    <Image.ToolTip>
                        <ToolTip Content="Загрузить изображение"/>
                    </Image.ToolTip>
                </Image>
            </Grid>
        </Grid>
    </Grid>
</Window>
